{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "outDir": "./build",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["mocha", "node"]
    },
    "include": ["src/**/*.ts", "test/**/*.test.ts"],
    "exclude": ["node_modules"],
}
